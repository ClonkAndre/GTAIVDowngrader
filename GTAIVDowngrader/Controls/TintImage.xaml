<UserControl x:Class="GTAIVDowngrader.Controls.TintImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTAIVDowngrader.Controls"
             mc:Ignorable="d">
    <Grid>
        <Image x:Name="TheImage" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Fill"/>
        <Rectangle x:Name="TheTintRectangle">
            <Rectangle.Fill>
                <SolidColorBrush x:Name="TheTintColor"/>
            </Rectangle.Fill>
            <Rectangle.OpacityMask>
                <ImageBrush x:Name="TheTintImage"/>
            </Rectangle.OpacityMask>
        </Rectangle>
    </Grid>
</UserControl>
