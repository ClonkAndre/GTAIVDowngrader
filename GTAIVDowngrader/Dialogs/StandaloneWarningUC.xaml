<UserControl x:Class="GTAIVDowngrader.Dialogs.StandaloneWarningUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTAIVDowngrader.Dialogs"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded"
             d:DesignHeight="460" d:DesignWidth="810">

    <Grid>

        <!-- MainGrid -->
        <Grid x:Name="MainGrid" Grid.Row="0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="TitleLabel" Text="Missing important files" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock x:Name="DescriptionLabel" Text="The downgrader is missing important files." FontSize="14" TextAlignment="Center" TextWrapping="Wrap" Foreground="White" MinWidth="261" MaxWidth="900" MinHeight="55" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,35,0,0"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
